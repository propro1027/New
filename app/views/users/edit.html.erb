<% provide(:title, 'Sign up') %>
<% provide(:class_text, 'user-edit') %>
<% provide(:button_text, '更新') %>

<h1>登録情報の更新</h1>

<div class = "row">
<div class = "col-md-6 col-md-offset-3">

<%=render 'form'%>
<%
=begin%>
 <%= render = 'shared_error_messages'%>
<%= <%= form_with(model: @user, local: true) do |f| %>

<%=f.label :name, class: "label-user-edit"%>
<%= <%= text_field :name , class: "form-control"%>%>

<%=f.label :email, class: "label-user-edit"%>
<%= <%= text_field :email , class: "form-control"%>%>

<%=f.label :password, class: "label-user-edit"%>
<%= <%= text_field :password , class: "form-control"%>%>

<%=f.label :password_confirmation, class: "label-user-edit"%>
<%= <%= text_field :password_confirmation , class: "form-control"%>%>

<%= f.submit "更新",class : "btn btn-primary btn-block btn-user-edit"%>

<% end %> 
<%
=end%>

</div>
</div>