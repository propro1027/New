<%= form_with(model: @user, local:ture) do |f| %>
<%= render 'shared/error_messages', object:@user %>

<%= f.label :name, class: "label-#{yield(:class_text)}" %
<%= text_field :name, class: "form-control" %>

<%= f.label :email, class: "label-#{yield(:class_text)}" %
<%= text_field :email, class: "form-control" %>

<%= f.label :department, class: "label-#{yield(:class_text)}" %>
<%= text_field :department, class: "form-control" %>


<%= f.label :password, class: "label-#{yield(:class_text)}" %
<%= text_field :password, class: "form-control" %>

<%= f.label :password_confirmation, class: "label-#{yield(:class_text)}" %
<%= text_field :password_confirmation, class: "form-control" %>

<%= f.submit yield(:button_text), class:"btn btn-parimary btn-block btn-#{yield(:class_text)}"%>

<%end%>